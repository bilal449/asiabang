<div class="clearfix padding30">
  <h3>Services</h3>
  <% if @center.tags.blank? %>
    <p>No services yet!</p>
  <% else %>
    <table class="table">
      <% @center.tags.each_slice(2) do |slice| %>
        <tr>
          <% slice.each do |tag| %>
            <td>
              <%= image_tag tag.image.url %>
              <%= tag.name %>
            </td>
          <% end %>
        </tr>
      <% end %>      
    </table>
  <% end %>
</div>