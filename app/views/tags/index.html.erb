<div class="container page-content">
  <div class="row">
    <div class-"span12">
      <div class="box-container">
        <div style="margin-left: auto; margin-right: auto; width: 20em" ><br />

          <h1>Tags</h1>

          <table>
            <thead>
              <tr>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @tags.each do |tag| %>
                <tr>
                  <td class="tag"><%= image_tag tag.image.url %><%= link_to tag.name, tag, class: 'tag' %>
                    <br />
                    <br />
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>
</div>